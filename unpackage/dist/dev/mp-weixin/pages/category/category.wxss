  height: 66rpx;
  line-height: 66rpx;
  -webkit-border-radius: 100rpx;
          border-radius: 100rpx;
  background: #fa436a;
  font-size: 30rpx;
  color: #fff;
  /* margin: 30upx auto 20upx; */
}
@-webkit-keyframes showPopup {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
