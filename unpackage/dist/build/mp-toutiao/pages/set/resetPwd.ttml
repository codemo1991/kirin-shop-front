<view class="content"><view class="row b-b"><text class="tit">旧密码</text><input class="input" type="text" placeholder="请输入旧密码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['','oldPwd','$event',[]]]]]]}}" value="{{oldPwd}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">新密码</text><input class="input" type="text" placeholder="请输入新密码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['','newPwd','$event',[]]]]]]}}" value="{{newPwd}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">新密码</text><input class="input" type="text" placeholder="请再次输入新密码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['','reNewPwd','$event',[]]]]]]}}" value="{{reNewPwd}}" bindinput="__e"/></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>